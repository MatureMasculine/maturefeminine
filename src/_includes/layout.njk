<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or "The Mature Feminine" }}</title>
    <base href="{{ '/' | url }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="assets/styles.css" rel="stylesheet" />
    {% if site.ga4 %}
    <!-- GA4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ site.ga4 }}"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);} gtag('js', new Date()); gtag('config', '{{ site.ga4 }}');
    </script>
    {% endif %}
  </head>
  <body>
    <div class="d-flex">
      <!-- Sidebar -->
      <nav id="sidebar" class="border-end p-3 offcanvas-lg offcanvas-start" tabindex="-1">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <a href="{{ '/' | url }}" class="navbar-brand fw-bold">Mature Feminine</a>
          <button type="button" class="btn btn-sm btn-outline-secondary" id="themeToggle" aria-label="Toggle dark mode">
            <span class="theme-label">Dark</span>
          </button>
        </div>
        <div class="mb-2">
          <input class="form-control form-control-sm" id="searchInput" type="search" placeholder="Searchâ€¦" />
        </div>
        <div class="accordion" id="navAccordion">
          {% for group in archetypes.groups %}
          <div class="accordion-item">
            <h2 class="accordion-header" id="heading-{{ group.slug }}">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ group.slug }}" aria-expanded="false" aria-controls="collapse-{{ group.slug }}">
                {{ group.name }}
              </button>
            </h2>
            <div id="collapse-{{ group.slug }}" class="accordion-collapse collapse" data-bs-parent="#navAccordion">
              <div class="accordion-body py-2">
                <p class="text-muted small mb-2">{{ group.summary }}</p>
                <ul class="list-unstyled small" data-group="{{ group.slug }}">
                  {% for item in group.items %}
                  <li class="mb-2 nav-item" data-name="{{ item.name | lower }}" data-qualities="{{ (item.qualities or []) | join(',') | lower }}">
                    <a class="text-decoration-none" href="{{ group.slug }}/{{ item.slug }}/">{{ item.name }}</a>
                    {% if item.qualities %}
                    <span class="ms-1">
                      {% for q in item.qualities %}
                      <span class="badge text-bg-light chip">{{ q }}</span>
                      {% endfor %}
                    </span>
                    {% endif %}
                  </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </nav>

      <!-- Content -->
      <main class="flex-grow-1">
        <div class="container py-4">
          {{ content | safe }}
        </div>
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fuse.js@6.6.2"></script>
    <script src="assets/main.js"></script>
  </body>
</html>
